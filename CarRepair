public class StuffManager{
	
	private int user_id;
	private int selected_engineer

	public int AvailableEngineers(){
		
		for(int i=0; i< stuff_counter; i++){
			if(staff[i].role == engineer){
				if(current_tasks<=2){
					selected_engineer=staff[i];	
					break; 
				}	
			}
		}
		return selected_engineer;	
	}
}

